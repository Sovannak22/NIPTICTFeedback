<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_edit_post"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/paddingSize"
            android:layout_weight="1"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/paddingSize"
                android:src="@drawable/zidane"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/paddingSize"
                        android:text="Feedback to "
                        android:textColor="@color/hintColor"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_place_edit_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/paddingSize"
                        android:text=" Place"
                        android:textColor="@color/hintColor"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_privacy_edit_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_background"
                    >
                    <ImageView
                        android:id="@+id/privacy_icon_post"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_public_24dp"/>
                    <TextView
                        android:id="@+id/privacy_text_edit_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Public"
                        android:textSize="@dimen/textSizeSmall"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_drop_down_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/paddingSize"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_round_background">

                <EditText
                    android:id="@+id/txt_description_edit_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/paddingSize"
                    android:layout_marginTop="@dimen/paddingSize"
                    android:layout_marginBottom="50dp"
                    android:background="#fff"
                    android:gravity="top"
                    android:hint="Write announcement here ..."
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:id="@+id/upload_pic_edit_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="showPopup"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/paddingSize"
                        android:text="Tap here to upload image"
                        android:textColor="@color/hintColor"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="@dimen/paddingSize"
                        android:src="@drawable/ic_photo" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_upload_edit_post"
                android:layout_width="250dp"
                android:layout_height="150dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_background_edit_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaffffff"
        android:gravity="center">
        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rotate_loading_edit_post"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:loading_color="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>