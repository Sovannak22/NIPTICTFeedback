<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_blue_background_without_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingSize"
                android:text="More option"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginHorizontal="@dimen/paddingSize"></View>
        <LinearLayout
            android:background="@drawable/white_round_background"
            android:id="@+id/btn_edit_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingSize"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_edit_24dp"
                android:layout_marginHorizontal="@dimen/paddingSize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit News"
                android:textSize="@dimen/text_size"
                android:layout_marginHorizontal="@dimen/paddingSize"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_delete_news"
            android:background="@drawable/white_round_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingSize"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete_red_24dp"
                android:layout_marginHorizontal="@dimen/paddingSize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete News"
                android:textSize="@dimen/text_size"
                android:layout_marginHorizontal="@dimen/paddingSize"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_cancel_news_bottom_sheet"
            android:padding="@dimen/paddingSize"
            android:background="@drawable/blue_radius_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/comment_option_screen"
            android:layout_alignBottom="@+id/comment_option_screen"
            android:layout_margin="@dimen/paddingSize"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/paddingSize"
                android:text="Cancel"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>