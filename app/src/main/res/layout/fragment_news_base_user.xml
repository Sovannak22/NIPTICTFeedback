<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="@dimen/paddingSize">
        <Button
            android:id="@+id/btn_dorm_news_user"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Dorm"
            android:background="@drawable/blue_white_background"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:padding="@dimen/paddingSize"
            android:layout_marginHorizontal="@dimen/paddingSize"/>
        <Button
            android:id="@+id/btn_canteen_news_user"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Canteen"
            android:background="@drawable/white_round_background"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/paddingSize"
            android:layout_marginHorizontal="@dimen/paddingSize"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/news_user_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>