<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/appbar_id"
        android:background="@drawable/cover_photo"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/default_profile" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/default_profile" />

        <TextView

            android:id="@+id/tvProfile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profile_image"
            android:layout_marginBottom="-35dp"
            android:layout_marginHorizontal="@dimen/paddingSize"
            android:text="Full Name"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/camera_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="@dimen/paddingSize"
            android:src="@drawable/camera_edit" />


    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_name"
        android:layout_alignBottom="@id/appbar_id"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@id/view_bottom_name">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_id"
            android:layout_marginHorizontal="@dimen/paddingSize"
            android:layout_width="match_parent"
            android:layout_alignBottom="@id/appbar_id"
            android:layout_height="80dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabRippleColor="@color/colorPrimary"
            app:tabTextColor="#000"
            android:background="@color/colorAccent">


            <android.support.design.widget.TabItem
                android:id="@+id/tab_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public Post"

                />
            <android.support.design.widget.TabItem
                android:id="@+id/tab_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Post"
                />
            <android.support.design.widget.TabItem
                android:id="@+id/tab_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="@color/colorAccent"
                />

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hintColor">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>