<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<android.support.v7.widget.Toolbar-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!---->
    <!--</android.support.v7.widget.Toolbar>-->

    <RelativeLayout
        android:id="@+id/appbar_id"
        android:background="@drawable/cover_photo"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picid"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/default_profile" />

        <TextView

            android:id="@+id/tvProfile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/picid"
            android:layout_marginBottom="-35dp"
            android:layout_marginHorizontal="@dimen/paddingSize"
            android:text="Full Name"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/camera_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="@dimen/paddingSize"
            android:src="@drawable/camera_edit" />


    </RelativeLayout>



    <ImageView
        android:id="@+id/edit_infor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="213dp"
        android:layout_marginLeft="365dp"
        android:src="@drawable/edit_pro"/>  <android.support.design.widget.TabLayout
    android:layout_marginBottom="-50dp"
    android:id="@+id/tabLayout_id"
    android:layout_marginHorizontal="@dimen/paddingSize"
    android:layout_width="match_parent"
    android:layout_alignBottom="@id/appbar_id"
    android:layout_height="80dp"
    app:tabSelectedTextColor="@color/colorPrimary"
    app:tabRippleColor="@color/colorPrimary"
    app:tabTextColor="#000"
    android:background="@color/colorAccent">


    <android.support.design.widget.TabItem
        android:id="@+id/tab_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public Post"

        />
    <android.support.design.widget.TabItem
        android:id="@+id/tab_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private Post"
        />
    <android.support.design.widget.TabItem
        android:id="@+id/tab_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response"
        android:textColor="@color/colorAccent"
        />

</android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:background="@color/hintColor"
        android:id="@+id/viewPager_id"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentBottom="true">

    </android.support.v4.view.ViewPager>
</RelativeLayout>