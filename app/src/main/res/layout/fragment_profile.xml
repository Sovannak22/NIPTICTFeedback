<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/appbar_id"
        android:background="@drawable/cover_photo"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picid"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/default_profile"
            android:layout_marginTop="-30dp"
            />
        <!--<ImageView-->
            <!--android:id="@+id/imgView_profile"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="1dp"-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:src="@drawable/default_profile"/>-->
        <TextView

            android:id="@+id/tvProfile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/picid"
            android:layout_marginBottom="-35dp"
            android:layout_marginHorizontal="@dimen/paddingSize"
            android:text="Full Name"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_marginBottom="-50dp"
        android:id="@+id/tabLayout_id"
        android:layout_marginHorizontal="@dimen/paddingSize"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/appbar_id"
        android:layout_height="80dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabRippleColor="@color/colorPrimary"
        app:tabTextColor="#000"
        android:background="@color/colorAccent"
        >
        <android.support.design.widget.TabItem
            android:id="@+id/tab_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Post"

            />
        <android.support.design.widget.TabItem
            android:id="@+id/tab_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Post"
            />
        <android.support.design.widget.TabItem
            android:id="@+id/tab_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Response"
            android:textColor="@color/colorAccent"
            />

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_alignParentBottom="true"
        android:id="@+id/viewPager_id"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </android.support.v4.view.ViewPager>
</RelativeLayout>