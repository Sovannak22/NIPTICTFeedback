<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:background="#a0000000">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="@drawable/white_round_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    android:text="Select image to upload"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="20dp">
                <LinearLayout
                    android:id="@+id/btn_take_photo"
                    android:layout_margin="@dimen/paddingSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_background"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/paddingSize">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_photo_camera_black_24dp"/>
                    <TextView
                        android:paddingHorizontal="@dimen/paddingSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a photo"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:id="@+id/btn_open_gallery"
                    android:layout_margin="@dimen/paddingSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_background"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_photo_library_black_24dp"/>
                    <TextView
                        android:paddingHorizontal="@dimen/paddingSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Gallery"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>